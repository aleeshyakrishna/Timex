<section class="">
    <div class="container d-flex justify-content-center">
      <div class="row w-75 mt-5">
        <div class="col-md-12">
          <h2 class="text-center">Edit Product</h2>
          <form onsubmit="return validate()" action="/admin/edit-product/<%=editproduct._id %>" method="POST" enctype="multipart/form-data">
            <label for="">Prodcut Name</label>
            <input type="text" name="name" id="name" class="form-control" value="<%=editproduct.Productname%>" />
            <label for="">Description</label>
            <input type="text" name="description"  id="description"  class="form-control" value="<%=editproduct.ProductDescription%>" />
  
            <label for="">Price</label>
            <input type="text" name="price" id="Price" class="form-control" value="<%=editproduct.Price%>" />
  
            
            <label for="cars">Category</label>
           
            <select class="form-select" name="category" id="category">
              <% procategory.forEach(function(procategory) { %>
              <option ><%=procategory.CategoryName %></option>
              <% } )%>
            </select>
          
            <label for="">Quantity</label>
            <input type="text" name="quantity" id="quantity" class="form-control" value="<%=editproduct.Quantity%>" />
  
            <label for="">Image</label>
            <img src="/uploads/<%=editproduct.Image%>" alt="" style="width:100px;height:auto" id="imageEdit" class="mt-3 mb-3">
            <input type="file" name="file2" class="form-control" onchange="changeImage(event)" />
  
            <button type="submit" class="btn btn-success mt-4">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </section>

  <script>
    changeImage(events)
    {
      document.getElementById('imageEdit').src = URL.createObjectURL(events.target.files[0])
    }

    function validate(){
    console.log("testing");
    const quantityInput = document.getElementById("quantity");
  const quantity = quantityInput.value;
  const nameInput=document.getElementById("name");
  const name=nameInput.value;
  const description=document.getElementById("description").value;
  const price=document.getElementById("Price").value;


    
    
  if (quantity < 0) {
    alert("Quantity cannot be negative");
    return false;
  }
  if (isNaN(quantity)) {
    alert("Error: Quantity should be a number.");
    return false;
  }

  if (!isNaN(name)) {
    alert("Please enter a valid name!");
    return false;
  }
  if (/[^a-zA-Z0-9]/.test(name)) {
    alert("Error: name should not contain special characters.");
    return false;
  }

  if (!isNaN(description)) {
    alert("Please enter a valid discription!");
    return false;
  }
  if (/[^a-zA-Z0-9]/.test(description)) {
    alert("Error: description should not contain special characters.");
    return false;
  }

  if (isNaN(quantity)) {
    alert("Error: Price should be a number.");
    return false;
  }

  if (price < 0) {
    alert("price cannot be negative");
    return false;
  }


  if (/[^a-zA-Z0-9]/.test(price)) {
    alert("Error: price should not contain special characters.");
    return false;
  }
 
  
  return true;
   }
  </script>